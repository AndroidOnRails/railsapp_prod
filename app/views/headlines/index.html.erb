<h1>Listing headlines</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @headlines.each do |headline| %>
  <tr>
    <td><%= headline.title %></td>
    <td><%= headline.active %></td>
    <td><%= link_to 'Show', headline %></td>
    <td><%= link_to 'Edit', edit_headline_path(headline) %></td>
    <td><%= link_to 'Destroy', headline, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

