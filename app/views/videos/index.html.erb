<h1>Listing videos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Url</th>
    <th>Image url</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @videos.each do |video| %>
  <tr>
    <td><%= video.title %></td>
    <td><%= video.url %></td>
    <td><%= video.image_url %></td>
    <td><%= video.active %></td>
    <td><%= link_to 'Show', video %></td>
    <td><%= link_to 'Edit', edit_video_path(video) %></td>
    <td><%= link_to 'Destroy', video, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

